generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String

  tickets  Ticket[]
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
}

model Engineer {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
}

model Technician {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
}

model Ticket {
  id       Int    @id @default(autoincrement())
  type     String
  subtype  String
  subject  String
  body     String
  status   String

  userId   Int
  user     User   @relation(fields: [userId], references: [id])

  engineerId Int

  createdAt   DateTime       @default(now())
}


