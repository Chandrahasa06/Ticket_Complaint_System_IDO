generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String

  tickets  Ticket[]

  @@map("user")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String

  @@map("admin")
}

model Engineer {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String

  @@map("engineer")
}

model Technician {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String

  @@map("technician")
}

model Ticket {
  id       Int    @id @default(autoincrement())
  type     String
  subtype  String
  subject  String
  body     String
  status   String

  userId   Int
  user     User   @relation(fields: [userId], references: [id])

  createdAt   DateTime       @default(now())

  @@map("ticket")
}


